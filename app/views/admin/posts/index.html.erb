<div class="container flex">
	<div class="left-list">
		<div class="tags flex">
			<ul class="flex">
				<li><a href="#">Posts</a></li>
				<li><a href="#">Users</a></li>
				<li><a href="#">Comments</a></li>
				<li><a href="#">Setting</a></li>
				<li><a class="more"><span class="fa fa-plus-square fa-fw"></span> more</a></li>
			</ul>
			<div class="sort flex">
				<ul class="flex sort">
					<li><a class="button buttonStyle1 post-create">创建帖文</a></li>
				</ul>
			</div>
			<div class="down-tags">
				<ul class="flex">
					<li><a href="#">暂无其他...</a></li>
				</ul>
			</div>
		</div>
		<div class="post-list">
			<ul>
				<% @posts.each do |post| %>
					<li>
						<div class="post-data">
							<p class="tag flex">
								文章标签: 
								<% post.tags.each do |tag| %>
									<%= tag.name %>
								<% end %>
								(Publish: <%= post.is_publish %>)
								<span class="flex">
									<span>
										<a href="#" class="button"><span class="fa fa-chain fa-fw"></span></a>
										<%= link_to admin_post_path(post),class: 'button' do %>
											<span class="fa fa-edit fa-fw"></span>
										<% end %>
										<%= link_to admin_post_path(post),class: 'button',method: :delete,data:{confirm:"是否确定删除#{post.title}?"} do %>
											<span class="fa fa-trash fa-fw"></span>
										<% end %>
									</span>
								</span>
							</p>
							<div class="img flex">
								<%= image_tag('pic.jpeg') %>
								<span>author: <%= post.administrator.name %></span>
								<span>date: <%= time_now(post.created_at) %></span>
							</div>
							<div class="pd">
								<h3 class="flex">
									<%= link_to admin_post_path(post) do%>
										<%= post.title %>
									<% end %>
								</h3>
								<p><a><%= truncate(strip_tags(post.content),length:140,separate: '') %></a></p>
							</div>
							<div class="post-control">
								<ul class="flex">
									<li class="vote"><a href="#" class="active"><span class="fa fa-star fa-fw"></span>200</a></li>
									<li><a><span class="fa fa-eye fa-fw"></span>1.1k</a></li>
									<li class="comments"><a><span class="fa fa-comment fa-fw"></span>50条评论</a></li>
								</ul>
							</div>
							<div class="comment">
								<h3 class="flex">
									<p>50条评论</p>
									<p class="close"><span class="fa fa-close fa-fw"></span></p>
								</h3>
								<div class="comment-list">
									<ul>
										<li>
											<div class="img flex">
												<img src="../img/pic.jpeg" alt="">
												<span>author: Jetty</span>
												<span>date: Sunday 14 04, 2018</span>
											</div>
											<p>测试发言中...</p>
										</li>
										<li>
											<div class="img flex">
												<img src="../img/pic.jpeg" alt="">
												<span>author: Jetty</span>
												<span>date: Sunday 14 04, 2018</span>
											</div>
											<p>测试发言中...</p>
										</li>
									</ul>
								</div>
								<div class="comment-send">
									<form action="#">
										<div class="flex">
											<input type="text" placeholder="评论请注意说辞...">
											<input type="submit" value="评论" class="buttonStyle2">
										</div>
									</form>
								</div>
							</div>
						</div>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
	<%= render 'generalPurpose/right_admin' %>
</div>
<%= render 'generalPurpose/post_create' %>
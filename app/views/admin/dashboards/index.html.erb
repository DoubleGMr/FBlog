<% provide(:title,'Dashboard') %>
<div class="container flex">
	<div class="left-list">
		<div class="tags flex">
			<ul class="flex">
				<li><%= link_to 'Posts',admin_posts_path %></li>
				<li><%= link_to 'Users',admin_users_path %></li>
				<li><%= link_to 'Comments',admin_comments_path %></li>
				<li><a class="more"><span class="fa fa-plus-square fa-fw"></span> more</a></li>
			</ul>
			<div class="sort flex">
				<ul class="flex sort">
					<li><%= link_to '数据刷新',admin_dashboards_path,class: 'button buttonStyle1' %></li>
				</ul>
			</div>
			<div class="down-tags">
				<ul class="flex">
					<li><a href="#">暂无其他</a></li>
				</ul>
			</div>
		</div>
		<div class="total-data">
			<div class="total-chart">
				<h3>Total Data with chart</h3>
				<div class="flex">
					<div class="chart" id="totalChart">	
					</div>
				</div>
			</div>
			<div class="total-tags">
				<h3 class="flex">
					Tags had benn Created
					<span>
						<a class='buttonStyle2 button tag-create'>
							<span class="fa fa-plus fa-fw"></span>添加标签
						</a>
					</span>
				</h3>
				<div class="flex data-box">
					<% @tags.each do |tag| %>
						<button class="button buttonStyle1">
							<%= tag.name %>
							<% if tag.in_use? %>
								<a class="flex flex-center in_use"><span class="fa fa-trash fa-fw"></span></a>
							<% else %>
								<%= link_to admin_tag_path(tag),class: 'flex flex-center',method: :delete,data:{confirm: "确定要删除标签#{tag.name}吗?"} do %>
									<span class="fa fa-trash fa-fw"></span>
								<% end %>
							<% end %>
						</button>
					<% end %>
				</div>
			</div>
			<div class="total-posts">
				<h3 class="flex">
					Posts'Lastest Data
					<span>
						<%= link_to admin_posts_path,class: 'buttonStyle2 button' do %>
							<span class="fa fa-plus fa-fw"></span>查看更多
						<% end %>
					</span>
				</h3>
				<ul>
					<% @posts.last(3).each do |post| %>
					<li>
						<div class="post-data">
							<div class="pd">
								<h3 class="flex">
									<%= link_to admin_post_path(post) do %>
										<%= post.title %>
									<% end %>
									<span>
										<%= link_to admin_post_path(post),class: 'button buttonStyle3' do %>
											<span class="fa fa-eye fa-fw">
										<% end %>
										<%= link_to admin_post_path(post,f_a: 'dashboard'),class: 'button buttonStyle3',method: :delete,data:{confirm: "确定要删除#{post.title}吗?"} do %>
											<span class="fa fa-trash fa-fw">
										<% end %>
									</span>
								</h3>
							</div>
							<div class="img flex">
								<%= image_tag('pic.jpg') %>
								<span>author: <%= post.administrator.name %></span>
								<span>Created_at: <%= time_now(post.created_at) %></span>
							</div>
							<div class="post-control">
								<ul class="flex">
									<li class="vote"><a class="active"><span class="fa fa-star fa-fw"></span><%= count(post.votes.count) %></a></li>
									<li><a><span class="fa fa-eye fa-fw"></span><%= count(post.views.count) %></a></li>
									<li class="comments"><a><span class="fa fa-comment fa-fw"></span><%= post.comments.count %>条评论</a></li>
								</ul>
							</div>
							<div class="comment">
								<h3 class="flex">
									<p>Posts共<span class="color"><%= post.comments.count %></span>条评论</p>
									<p class="close"><span class="fa fa-close fa-fw"></span></p>
								</h3>
								<div class="comment-list">
									<ul>
										<% post.comments.each do |comment| %>
										<li>
											<div class="img flex">
												<%= image_tag('pic.jpg') %>
												<span>User: <%= comment.user.name %></span>
												<span>date: <%= time_now(comment.created_at) %></span>
											</div>
											<p><%= comment.content %></p>
										</li>
									<% end %>
									</ul>
								</div>
							</div>
						</div>
					</li>
					<% end %>
				</ul>
			</div>
			<div class="total-users">
				<h3 class="flex">
					lasteet 3 Users'data
					<span>
						<%= link_to admin_users_path,class: 'buttonStyle2 button' do %>
							<span class="fa fa-plus fa-fw"></span>查看更多
						<% end %>
					</span>
				</h3>
				<div class="users-list">
					<ul>
						<% @users.last(3).each do |user| %>
						<li>
							<div class="post-data">
								<div class="pd">
									<h3 class="flex">
										<%= link_to admin_user_path(user) do %>
											Create at: <%= time_now(user.created_at) %>
										<% end %>
										<span>
											<%= link_to admin_user_path(user),class: 'buttonStyle3 button' do %>
												<span class="fa fa-eye fa-fw">
											<% end %>
											<%= link_to admin_user_path(user,f_a: 'dashboard'),class: 'buttonStyle3 button',method: :delete,data:{confirm: "确认删除#{user.name}吗？"} do %>
												<span class="fa fa-trash fa-fw">
											<% end %>
										</span>
									</h3>
								</div>
								<div class="img flex">
									<%= image_tag('pic.jpg',class: "middleImg") %>
									<div>
										<span><strong>Name:</strong> <%= user.name %></span>
										<span><strong>Email:</strong> <%= user.email %></span>
									</div>	
								</div>
							</div>
						</li>
						<% end %>
					</ul>
				</div>
			</div>
			<div class="total-comments">
				<h3 class="flex">
					Lastest 3 Comments
					<span>
						<%= link_to admin_comments_path,class: 'buttonStyle2 button' do %>
							<span class="fa fa-plus fa-fw"></span>查看更多
						<% end %>
					</span>
				</h3>
				<div class="comments-list">
					<ul>
						<% @comments.last(3).each do |comment| %>
						<li>
							<div class="post-data">
								<div class="pd">
									<h3 class="flex">
										<a href="#">Create at: <%= time_now(comment.created_at) %></a>
										<span>
											<%= link_to admin_post_path(comment.post),class: 'buttonStyle3 button' do %>
														<span class="fa fa-eye fa-fw">
											<% end %>
											<%= link_to admin_comment_path(comment),class: 'buttonStyle3 button',method: :delete,data:{confirm: "确认删除该评论吗？"} do %>
												<span class="fa fa-trash fa-fw">
											<% end %>
										</span>
									</h3>
								</div>
								<div class="img flex">
									<%= image_tag('pic.jpg') %>
									<span><strong>Name:</strong> <%= comment.user.name %></span>
									<span><strong>For:</strong> <%= comment.post.title %></span>
								</div>
								<div class="cc">
									<p><%= comment.content %></p>
								</div>
							</div>
						</li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<%= render 'generalPurpose/right_admin' %>
</div>
<%= render 'generalPurpose/dashboard' %>
<input type="hidden" id="users" value="<%= @users.count %>">
<input type="hidden" id="posts" value="<%= @posts.count %>">
<input type="hidden" id="views" value="<%= @post_views %>">
<input type="hidden" id="comments" value="<%= @comments.count %>">
<input type="hidden" id="visits" value="<%= @visits %>">
<input type="hidden" id="messages" value="<%= @messages %>">


<script type="text/javascript" src="https://cdn.bootcss.com/echarts/4.0.4/echarts-en.common.min.js"></script>
<script>
	$(document).on("turbolinks:load",function(){
		let totalChart = echarts.init(document.getElementById('totalChart'));
		let users = $('#users').val();
		let posts = $('#posts').val();
		let views = $('#views').val();
		let comments = $('#comments').val();
		let visits = $('#visits').val();
		let messages = $('#messages').val();
		let option = {
		    tooltip : {
		        trigger: 'item',
		        formatter: "{a} <br/>{b} : {c} ({d}%)"
		    },
		    legend: {
		        orient: 'vertical',
		        left: '70%',
		        top: 'middle',
		        data: ['游客访问量','信件接受量','用户注册量','贴文创建量','贴文阅读量','用户评论量'],
		        textStyle: {
		        	fontSize: 16,
		        	color: '#666',
		        }
		    },
		    series : [
		        {
		            name: '具体数据',
		            type: 'pie',
		            radius : '55%',
		            center: ['30%', '55%'],
		            data:[
		                {value:visits, name:'游客访问量'},
		                {value:messages, name:'信件接受量'},
		                {value:users, name:'用户注册量'},
		                {value:posts, name:'贴文创建量'},
		                {value:views, name:'贴文阅读量'},
		                {value:comments, name:'用户评论量'},
		            ],
		            label: {
			            textStyle: {
			            	fontSize: 14,
			            	color: '#777',
			            }
		            },
		            itemStyle: {
		            	normal: {
		            		color:'#0084ff',
		            		shadowBlur: 10,
		            		shadowColor: 'rgba(0, 0, 0, 0.5)'
		            	},
		            }
		        }
		    ]
		};
		totalChart.setOption(option);
	});
</script>
<% provide(:title,'Home') %>
<div class="container flex">
	<div class="left-list">
		<div class="tags flex">
			<ul class="flex">
				<li><%= link_to '全部内容','#' %></li>
				<li><%= link_to 'Html&Css','#' %></li>
				<li><a class="more"><span class="fa fa-plus-square fa-fw"></span> more</a></li>
			</ul>
			<div class="sort flex">
				<ul class="flex sort">
					<li>
						<%= link_to '#' do %>
							<span class="fa fa-exchange fa-fw"></span>热门排序
						<% end %>
					</li> | 
					<li><a href="#">时间排序</a></li>
				</ul>
			</div>
			<div class="down-tags">
				<ul class="flex">
					<li><%= link_to 'Js&Jq','#' %></li>
					<li><%= link_to 'Ruby on Rails','#' %></li>
					<li><%= link_to 'React native','#' %></li>
					<li><%= link_to 'WEixin','#' %></li>
					<li><%= link_to '问题集','#' %></li>
				</ul>
			</div>
		</div>
		<div class="post-list">
			<ul>
				<li>
					<div class="post-data">
						<p class="tag">文章标签: Ruby On Rails</p>
						<div class="img flex">
							<%= image_tag('pic.jpeg') %>
							<span>author: Jetty</span>
							<span>date: Sunday 14 04, 2018</span>
						</div>
						<div class="pd">
							<h3><%= link_to 'RoR学习系列第一集','#' %></h3>
							<p><%= link_to 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Veritatis eligendi quos qui reprehenderit enim corporis, libero adipisci, facere maiores maxime modi minima, officia architecto repellat! Nobis beatae minus asperiores sequi!...','#' %></p>
						</div>
						<div class="post-control">
							<ul class="flex">
								<li class="vote">
									<%= link_to '#',class:'active' do %>
										<span class="fa fa-star fa-fw"></span>200
									<% end %>
								</li>
								<li><a><span class="fa fa-eye fa-fw"></span>1.1k</a></li>
								<li class="comments"><a><span class="fa fa-comment fa-fw"></span>50条评论</a></li>
							</ul>
						</div>
						<div class="comment">
							<h3 class="flex">
								<p>50条评论</p>
								<p class="close"><span class="fa fa-close fa-fw"></span></p>
							</h3>
							<div class="comment-list">
								<ul>
									<li>
										<div class="img flex">
											<%= image_tag('pic.jpeg') %>
											<span>author: Jetty</span>
											<span>date: Sunday 14 04, 2018</span>
										</div>
										<p>测试发言中...</p>
									</li>
								</ul>
							</div>
							<div class="comment-send">
								<form action="#">
									<div class="flex">
										<input type="text" placeholder="评论请注意说辞...">
										<input type="submit" value="评论" class="buttonStyle2">
									</div>
								</form>
							</div>
						</div>
					</div>
				</li>
			</ul>
		</div>
	</div>
	<div class="right-other">
		<div class="user flex flex-center">
			<div class="img">
				<%= image_tag('pic.jpeg') %>
			</div>
			<p><a href="#">Jetty <span class="fa fa-edit fa-fw"></span></a></p>
			<div class="user-data">
				<ul class="flex">
					<li>
						<%= link_to '#' do %>150<% end %>
						<p>评论数</p>
					</li>
					<li>
						<a>50</a>
						<p>点赞数</p>
					</li>
				</ul>
			</div>
		</div>
		<div class="recommend">
			<h3>Recommend 学习推荐网址</h3>
			<ul class="flex">
				<li><a href="#">W3School</a></li>

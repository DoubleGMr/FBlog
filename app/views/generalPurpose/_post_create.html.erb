<div class="posts-box flex flex-center">
	<div>
		<%= form_for [:admin, @post] do |f| %>
		<h2>Create New Posts</h2>
			<div>
				<%= f.text_field :title, placeholder: '请输入title...' %>
			</div>
			<div>
				<%= f.select :tag_ids, Tag.all.collect {|t| [t.name, t.id]},multiple: :true %>
			</div>
			<div>
				<%= f.cktext_area :content,:class => 'ckeditor' %>
			</div>
			<div>
				<%= f.check_box :is_publish %>
				<span>帖文是否发布?</span>
			</div>
			<div>
				<input type="submit" value="帖文创建/修改" class="button buttonStyle1">
			</div>
		<% end %>
	</div>
	<p class="close"><span class="fa fa-close fa-fw"></span></p>
</div>
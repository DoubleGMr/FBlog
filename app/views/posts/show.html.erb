<div class="container flex">
	<div class="left-list">
		<div class="tags flex">
			<ul class="flex">
				<li>
					<h3>
						<span class="fa fa-bookmark fa-fw"></span>
						<span class="pls"><%= @post.title %></span>
					</h3>
				</li>
			</ul>
		</div>
		<div class="post-list">
			<ul>
				<li>
					<div class="post-data">
						<div class="pd">
							<h3 class="flex pl">
								<a href="#">Create at: <%= time_now(@post.created_at) %></a>
							</h3>
						</div>
						<div class="img flex">
							<%= image_tag('pic.jpeg') %>
							<span><strong>Name:</strong> <%= @post.administrator.name %></span>
							<span>
								<strong>Tag:</strong> 
								<% @post.tags.each do |tag| %>
									<%= tag.name %>
									<% end %>
								</span>
						</div>
						<div class="cc">
							<p><%= @post.content.html_safe %></p>
						</div>
						<div class="post-control">
							<ul class="flex">
								<li class="vote"><a href="#" class="active"><span class="fa fa-star fa-fw"></span>200</a></li>
								<li><a><span class="fa fa-eye fa-fw"></span>1.1k</a></li>
								<li class="comments"><a><span class="fa fa-comment fa-fw"></span><%= @post.comments.count %>条评论</a></li>
							</ul>
						</div>
						<div class="comment" style="display: block;">
							<h3 class="flex">
								<p>Posts共<span class="color"><%= @post.comments.count %></span>条评论</p>
								<p class="close"><span class="fa fa-close fa-fw"></span></p>
							</h3>
							<div class="comment-list">
								<ul>
									<% @post.comments.each do |comment| %>
										<li>
											<div class="img flex">
												<%= image_tag('pic.jpeg') %>
												<span>User: <%= comment.user.name %></span>
												<span>date: <%= time_now(comment.created_at) %></span>
											</div>
											<p><%= comment.content %></p>
										</li>
									<% end %>
								</ul>
							</div>
							<div class="comment-send">
								<%= form_for @comment do |f| %>
									<div class="flex">
										<%= f.hidden_field :post_id, value: @post.id %>
										<%= f.text_field :content, placeholder: '评论请注意说辞...' %>
										<% if logged_in? %>
											<%= f.submit "评论",class: 'buttonStyle2' %>
										<% else %>
											<%= link_to '评论', login_path,class: 'buttonStyle2' %>
										<% end %>
									</div>
								<% end %>
							</div>
						</div>
					</div>
				</li>
			</ul>
		</div>
	</div>
	<%= render 'generalPurpose/right_other' %>
</div>